<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_primary"
        android:title="Aquatrack - Sales"
        android:titleTextColor="@color/white"
        app:titleCentered="true"
        app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    <!-- Tab Layout - Matching Production Activity Style -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/blue_primary"
        app:tabSelectedTextColor="@color/blue_primary"
        app:tabTextColor="@color/blue_primary"
        android:background="@color/white" />

    <!-- ViewPager for tab content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSales"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
