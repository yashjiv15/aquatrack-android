<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_primary"
        app:title="Aquatrack"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/blue_primary"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Product"
                        android:textColor="@color/blue_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerProduct"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_whiteborder"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/blue_primary"
                            app:strokeWidth="1dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginEnd="8dp">
                            <LinearLayout
                                android:id="@+id/cardStock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/white"
                                android:padding="10dp"
                                android:visibility="gone"
                                android:elevation="2dp">
                                <TextView
                                    android:id="@+id/textStockTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Stock: -"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/blue_primary"
                            app:strokeWidth="1dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="8dp">
                            <LinearLayout
                                android:id="@+id/cardDispatch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/white"
                                android:padding="10dp"
                                android:visibility="gone"
                                android:elevation="2dp">
                                <TextView
                                    android:id="@+id/textDispatchTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Dispatched: -"
                                    android:textColor="@color/blue_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:ellipsize="end"/>
                                    android:maxLines="2"
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDispatchSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <!-- Dispatch Section UI here -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Dispatch"
                            android:textColor="@color/blue_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:paddingTop="12dp"
                            android:paddingBottom="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter dispatch quantity"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/blue_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxBackgroundColor="@color/white"
                            android:layout_marginBottom="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextDispatchQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColorHint="@color/blue_grey"
                                android:textColor="@color/blue_dark"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSelectDate"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Choose Date"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/blue_button"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:elevation="2dp"
                            app:icon="@android:drawable/ic_menu_my_calendar"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/textSelectedDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No date selected"
                            android:textColor="@color/blue_primary"
                            android:textSize="16sp"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="12dp"
                            android:fontFamily="sans-serif"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSubmitDispatch"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Submit Dispatch"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/blue_primary"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:elevation="2dp"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutStockSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <!-- Stock Section UI here -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Update Stock"
                            android:textColor="@color/blue_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:paddingTop="12dp"
                            android:paddingBottom="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter stock quantity"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/blue_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxBackgroundColor="@color/white"
                            android:layout_marginBottom="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextStockQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColorHint="@color/blue_grey"
                                android:textColor="@color/blue_dark"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSelectStockDate"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Choose Stock Date"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/blue_button"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:elevation="2dp"
                            app:icon="@android:drawable/ic_menu_my_calendar"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/textSelectedStockDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No stock date selected"
                            android:textColor="@color/blue_primary"
                            android:textSize="16sp"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="12dp"
                            android:fontFamily="sans-serif"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSubmitStock"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Submit Stock"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/blue_primary"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:elevation="2dp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
