<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshSalesTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarSales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_primary"
            android:title="Aquatrack - Sales"
            android:titleTextColor="@color/white"
            app:titleCentered="true"
            app:popupTheme="@style/ThemeOverlay.Material3.Light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/blue_primary"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Sale"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/blue_primary"
                            android:paddingBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Product"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinnerSaleProduct"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_whiteborder"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sale Quantity"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingBottom="4dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Quantity"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/blue_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            android:layout_marginBottom="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextSaleQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sale Amount"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingBottom="4dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sale amount"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/blue_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            android:layout_marginBottom="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextSaleAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sale Date"
                            android:textColor="@color/blue_primary"
                            android:textSize="14sp"
                            android:paddingBottom="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSelectSaleDate"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Choose Date"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/blue_button"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/textSelectedSaleDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No date selected"
                            android:textColor="@color/blue_primary"
                            android:textSize="14sp"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSubmitSale"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Submit Sale"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/blue_primary"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales History"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/blue_primary"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:id="@+id/layoutSalesHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
